---
interface Props {
    text: string;
    className?: string;
    variant?: "hero" | "main";
    align?: "left" | "center";
}

const {
    text,
    className = "",
    variant = "main",
    align = "center",
} = Astro.props;
---

<p
    class:list={[
        "font-mont-alter",
        variant === "hero"
            ? "font-[300] text-[15px] sm:text-[20px] text-white leading-6 sm:leading-7"
            : "font-[400] text-secondary text-[20px] sm:text-[24px] leading-6 sm:leading-8",
        align === "left" ? "text-left" : "text-center",
        className,
    ]}
>
    {text}
</p>
