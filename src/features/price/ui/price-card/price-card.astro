---
import Button from "../../../../shared/ui/button/button.astro";
import Image from "astro/components/Image.astro";

import TablerWheelIcon from "/public/images/tabler-wheel-icon.svg";

interface Props {
    title: string;
    price: string;
    descriptors: string[];
}

const { title, price, descriptors } = Astro.props;
---

<div
    class="w-full min-h-[610px] p-[20px] flex flex-col items-start border border-secondary-dark rounded-[12px] relative group hover:shadow-[0px_4px_128px_0px_#50C87840] transition-shadow duration-300 ease-in-out hover:border-primary"
>
    <span
        class="absolute inset-0 flex items-center justify-center text-[128px] font-[400] text-[#50C87808] z-0 leading-[128px] text-center"
        style={{ fontFamily: "Walk Da Walk One, sans-serif" }}
    >
        WRAP STUDIO
    </span>

    <span
        class="text-white font-gotham font-[400] text-[22px] leading-[37px] mb-4 group group-hover:text-primary transition-colors duration-300 ease-in-out"
    >
        {`${title}`.toUpperCase()}
    </span>

    <div class="flex-grow flex flex-col gap-4">
        {
            descriptors.map((descriptor) => (
                <div class="flex items-start gap-3">
                    <Image
                        src={TablerWheelIcon}
                        alt="Tabler Wheel Icon"
                        class="self-start shrink-0"
                    />
                    <span class="text-white font-mont-alter font-[600] text-[16px] leading-[37px] -mt-2 whitespace-pre-line">
                        {descriptor}
                    </span>
                </div>
            ))
        }
    </div>

    <div
        class="mt-auto flex flex-row items-center flex-wrap justify-between w-full gap-2"
    >
        <span
            class="text-primary font-[400] text-[50px]"
            style={{ fontFamily: "Walk Da Walk One, sans-serif" }}
        >
            {price}
        </span>
        <Button
            variant="outline"
            text={`заказать`.toUpperCase()}
            width="w-[150px]"
            height="h-[40px]"
        />
    </div>
</div>
